@model CarDetails

    <div class="container">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Rounded Chair</h3>
                <h6 class="card-subtitle">globe type chair for rest</h6>
                <div class="row">
                    <div class="col-lg-5 col-md-5 col-sm-6">
                        <div class="white-box text-center"><img src="@Model.CarImage"  class="w-100" asp-append-version="true"></div>
                    </div>
                    <div class="col-lg-7 col-md-7 col-sm-6">
                        <h4 class="box-title mt-5">Car Name : </h4>
                        <p>@Model.CarName</p>
                        <h2 class="mt-5">
                            $@Model.Price<small class="text-success">(36%off)</small>
                        </h2>
                        <button class="btn btn-dark btn-rounded mr-1" data-toggle="tooltip" title="" data-original-title="Add to cart">
                            <i class="fa fa-shopping-cart"></i>
                        </button>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-rounded">Edit</a>
                    </div> 
                </div>
            </div>
        </div>
    </div>
