@model IEnumerable<CarDetails>

<a asp-action="Create" class="btn btn-outline-primary">Create New</a>
<a asp-action="CreateCompany" class="btn btn-outline-primary">Create New Company</a>

<section class="section-products">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-md-8 col-lg-6">
                <div class="header">
                    <h3>Featured Product</h3>
                    <h2>Popular Products</h2>
                </div>
            </div>
        </div>
        <div class="row justify-content-center text-center">
            <!-- Single Product -->
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-6 col-xl-3 mr-5" style="border:5px;border-radius:10px;padding:0;margin:5px;">
                    <div id="product-1" class="single-product">
                        <div class="part-1">
                            <img class="card-img-top" src="@item.CarImage" class="img-responsive" alt="Card image cap" asp-append-version="true" />
                        </div>
                        <div class="row part-2 mt-5">
                            <h3 class="product-title">@item.CarName</h3>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary" style="margin-left:20px;">Detail</a>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</section>

